<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/huge_gap"
        android:gravity="center">

        <TextView
            style="@style/RTheme.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_rakuten_history" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_transitions"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/bt_split_history"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/split_bill_history_button"
        android:layout_marginTop="-80dp"
        android:layout_gravity="center"
        android:theme="@style/RTheme.Button.White"
        android:background="@color/white"
        android:textSize="20sp" />

</LinearLayout>
